<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Redirecionar para HTTPS (opcional)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Se o arquivo ou diretório não existir, redirecionar para index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Definir MIME types corretos para arquivos estáticos
<IfModule mod_mime.c>
    # JavaScript
    AddType application/javascript .js
    
    # CSS
    AddType text/css .css
    
    # Imagens
    AddType image/svg+xml .svg
    AddType image/png .png
    AddType image/jpeg .jpg .jpeg
    AddType image/gif .gif
    
    # Fontes
    AddType font/woff .woff
    AddType font/woff2 .woff2
    AddType application/x-font-ttf .ttf
    AddType application/vnd.ms-fontobject .eot
    AddType application/font-sfnt .otf
</IfModule>

# Headers para CORS
<IfModule mod_headers.c>
    <FilesMatch "\.(js|css|svg|ttf|woff|woff2|eot|otf)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# Permitir acesso a arquivos específicos
<Files "index.php">
    Order Allow,Deny
    Allow from all
</Files>

# Compressão gzip para melhor performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json image/svg+xml
</IfModule>